    "concurrently": "^9.2.1",
    "cors": "^2.8.6",
    "create-react-app": "^5.1.0",
    "express": "^5.2.1",
    "mongoose": "^9.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
